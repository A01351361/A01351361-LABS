    <main class="container">
        <h1><%= titulo %></h1>
            <% for (let mascota of lista_mascotas) { %>
                <div class="card small">
                    <div class="card-image waves-effect waves-block waves-light">
                      <img class="activator" src="http://c.files.bbci.co.uk/48DD/production/_107435681_perro1.jpg">
                    </div>
                    <div class="card-content">
                      <span class="card-title activator grey-text text-darken-4"><%= mascota %><i class="material-icons right">more_vert</i></span>
                      <p><a href="#">...</a></p>
                    </div>
                    <div class="card-reveal">
                      <span class="card-title grey-text text-darken-4"><%= mascota %><i class="material-icons right">close</i></span>
                      <p>Aquí habrá más información de la mascota.</p>
                    </div>
                  </div>
            <% } %>
    </main>

