<%- include('partials/head.ejs') %>
<%- include('partials/navbar.ejs') %>

    <main class="container">
        <h1><%= titulo %></h1>
        <label for="buscar">Buscar</label>
        <input type="text" name="buscar" id="buscar" onkeyup="buscar()">
        <div class="row" id="resultados">
            <% for (let mascota of lista_mascotas) { %>
                <div class="col s12 m4 l3">
                  <div class="card small">
                      <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="<%= mascota.imagen %>">
                      </div>
                      <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4"><%= mascota.nombre %><i class="material-icons right">more_vert</i></span>
                        <p><a href="#">...</a></p>
                      </div>
                      <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4"><%= mascota.nombre %><i class="material-icons right">close</i></span>
                        <p>Fuente de la imagen: <%= mascota.imagen %></p>
                      </div>
                    </div>
                  </div>
            <% } %>
          </div>
    </main>

<%- include('partials/footer.ejs') %>

